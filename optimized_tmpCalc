# Basic Calculations
# Calculator Program in Python by using input() and format() functions

def add_two_numbers(a, b):
    """Add two numbers and return the result."""
    return a + b

def subtract_two_numbers(a, b):
    """Subtract second number from the first and return the result."""
    return a - b

def multiply_two_numbers(a, b):
    """Multiply two numbers and return the result."""
    return a * b

def divide_two_numbers(a, b):
    """Divide first number by the second and return the result.
    
    Args:
        a (float): numerator.
        b (float): denominator (must not be zero).

    Returns:
        float: Result of division.

    Raises:
        ValueError: If b is zero.
    """
    if b == 0:
        raise ValueError("Cannot divide by zero.")
    return a / b

# Prompting input from the user
n1 = float(input("Enter first number: "))
n2 = float(input("Enter second number: "))

# Perform calculations
addition_result = add_two_numbers(n1, n2)
subtraction_result = subtract_two_numbers(n1, n2)
multiplication_result = multiply_two_numbers(n1, n2)
division_result = divide_two_numbers(n1, n2)

# Display results
print("{} + {} = {}".format(n1, n2, addition_result))
print("{} - {} = {}".format(n1, n2, subtraction_result))
print("{} * {} = {}".format(n1, n2, multiplication_result))